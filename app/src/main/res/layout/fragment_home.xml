<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.006"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/hello"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_weight="0.7"
            android:textStyle="bold"
            android:text="안녕하세요!"/>

        <TextView
            android:id="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_weight="0.3" />
    </LinearLayout>
    <TextView
        android:id="@+id/main_message"
        android:layout_marginBottom="12dp"
        android:layout_weight="0.004"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="고객님의 맞춤 추천 상품을 확인하세요 :)"/>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_weight="0.7"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/home_title_lip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="LIP 추천 제품"/>
        <GridView
            android:id="@+id/home_lip"
            android:layout_width="match_parent"
            android:layout_weight="0.4"
            android:layout_height="match_parent"
            android:background="@drawable/listview"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:numColumns="2"/>
        <TextView
            android:id="@+id/home_title_shadow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="SHADOW 추천 제품"/>
        <GridView
            android:id="@+id/home_shadow"
            android:layout_width="match_parent"
            android:layout_weight="0.4"
            android:layout_height="match_parent"
            android:background="@drawable/listview"
            android:layout_gravity="center_horizontal"
            android:numColumns="2" />
    </LinearLayout>
</LinearLayout>